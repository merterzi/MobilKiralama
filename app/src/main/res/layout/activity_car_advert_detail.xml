<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarAdvertDetailActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/ilanKaydetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="saveAdvert"
        android:text="İlanı Kaydet" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/carImagView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Fiyat : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/fiyatTextView"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="2500"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="İlan Tarihi : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tarihTextView"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="19.04.2022"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Marka : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/markaTextView"
                    android:layout_width="271dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="BMW"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Model Yılı : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/modelYiliTextView"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="2012"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Km : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/kmTextView"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="50000"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Motor Gücü : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/motorGücüTextView"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="150"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Motor Hacmi : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/motorHacmiTextView"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="1600"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Yakıt : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/yakitTextView"
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="Benzin"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Açıklama : "
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/aciklamaText"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"/>


            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="İlan Sahibi : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/adSoyadTextView"
                    android:layout_width="223dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="Mert Terzi"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Telefon : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/telefonTextView"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="05361112233"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>