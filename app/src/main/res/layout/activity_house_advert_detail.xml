<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HouseAdvertDetailActivity">

    <Button
        android:id="@+id/ilanKaydetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="saveAdvert"
        android:text="İlan Kaydet" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/houseImagView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Fiyat : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/fiyatTextView"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="2500"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="İlan Tarihi : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tarihTextView"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="19.04.2022"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="metrekare : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/metrekareTextView"
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="100"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Oda Sayısı : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/odaSayisiTextView"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="3+1"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Bina Yaşı : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/binaYasiTextView"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="5"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Kat : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/katTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="4"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Tapu Durumu : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tapuTextView"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="Kat Mülkiyetli"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Açıklama : "
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/aciklamaText"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"/>


            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="İlan Sahibi : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/adSoyadTextView"
                    android:layout_width="223dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="Mert Terzi"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="380dp"
                android:layout_height="3dp"
                android:background="@color/black"
                android:layout_marginLeft="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Telefon : "
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/telefonTextView"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:text="05361112233"
                    android:textSize="25sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>